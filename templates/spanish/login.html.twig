{% extends 'base.html.twig' %}
{% block title %}Entrar{% endblock %}
{% block body %}
    <form method="post">
        <h1>Acceso a la aplicación</h1>
        {% if error %}
            <h2 class="alert alert-danger">{{ error.message }}</h2>
        {% endif %}
        <input type="text" name="_username" placeholder="Usuario" value="{{ last_email }}" required {% if not error %}autofocus{% endif %}/>
        <input type="password" name="_password" placeholder="Contraseña" required {% if error %}autofocus{% endif %}/>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
{% endblock %}