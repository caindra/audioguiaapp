{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de audiogu√≠as</h1>
        {% for audio in audios %}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ audio.image }}" alt="{{ audio.nameEs }}">
                <audio src="{{ audio.audioEs }}" controls autoplay></audio>
                <div class="card-body">
                    <h5 class="card-title">{{ audio.nameEs }}</h5>
                    <p class="card-text">{{ audio.textEs }}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        {% else %}
            <h5>No hay audios registrados</h5>
        {% endfor %}
{% endblock %}