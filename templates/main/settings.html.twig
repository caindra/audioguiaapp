{% extends 'layout.html.twig' %}

{% block title %}Settings{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-6 mb-4">
                    <a href="{{ path('users') }}" class="text-decoration-none">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-users fa-3x mb-3"></i>
                                <h5 class="card-title text-dark">Gestión de Usuarios</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endif %}
            <div class="col-md-6 mb-4">
                <a href="{{ path('audioguides') }}" class="text-decoration-none">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-headphones fa-3x mb-3"></i>
                            <h5 class="card-title text-dark">Gestión de Audioguías</h5>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6 mb-4">
                <a href="{{ path('audioguides') }}" class="text-decoration-none">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fa-solid fa-key fa-3x mb-3"></i>
                            <h5 class="card-title text-dark">Cambiar mi contraseña</h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
