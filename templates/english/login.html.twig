{% extends 'base.html.twig' %}
{% block title %}Entrar{% endblock %}
{% block body %}
    <form method="post">
        <h1>Access to the app</h1>
        {% if error %}
            <h2 class="alert alert-danger">{{ error.message }}</h2>
        {% endif %}
        <input type="text" name="_username" placeholder="Email" value="{{ last_email }}" required {% if not error %}autofocus{% endif %}/>
        <input type="password" name="_password" placeholder="Password" required {% if error %}autofocus{% endif %}/>
        <button type="submit" class="btn btn-primary">Enter</button>
    </form>
{% endblock %}